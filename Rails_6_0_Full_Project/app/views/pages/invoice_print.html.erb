<div class="wrapper wrapper-content p-xl">
    <div class="ibox-content p-xl">
        <div class="row">
            <div class="col-sm-6">
                <h5>From:</h5>
                <address>
                        <strong>Elmadeal.</strong><br/>
                        Elmadeal Address<br/>
                        <abbr title="Phone">P:</abbr> (123) 601-4590
                    </address>
            </div>

            <div class="col-sm-6 text-right">
                    <h4>Invoice No.</h4>
                    <h4 class="text-navy">INV-<%= @invoice.id%></h4>
                    <span>To:</span>
                    <address>
                        <strong><%= @salon.name %></strong><br/>
                        <%= @salon.address %><br/>
                        <%= @salon.city %><br/>
                        <abbr title="Phone">P:</abbr><%= @salon.country_code << '-' << @salon.phone %>
                    </address>
                    <p>
                        <span><strong>Invoice Date:</strong><%= @invoice.created_at.to_date %></span><br/>
                        <span><strong>Due Date:</strong> <%= (@salon.created_at + 7.days).to_date %></span>
                    </p>
                </div>
        </div>

        <div class="table-responsive m-t">
                <table class="table invoice-table">
                    <thead>
                    <tr>
                        <th>Item List</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Tax</th>
                        <th>Total Price</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>
                            <div><strong><%= @salon.subscription_plan.name %> plan subscription</strong></div>
                            <small>1 month plan subscription</small>
                        </td>
                        <td>1</td>
                        <td>$<%= @salon.subscription_plan.price %></td>
                        <td>$0.0</td>
                        <td>$<%= @salon.subscription_plan.price %></td>
                    </tr>

                    </tbody>
                </table>
            </div>
        <!-- /table-responsive -->

        <table class="table invoice-total">
                <tbody>
                <tr>
                    <td><strong>Sub Total :</strong></td>
                    <td>$<%= @salon.subscription_plan.price %></td>
                </tr>
                <tr>
                    <td><strong>TAX :</strong></td>
                    <td>$0.0</td>
                </tr>
                <tr>
                    <td><strong>TOTAL :</strong></td>
                    <td>$<%= @salon.subscription_plan.price %></td>
                </tr>
                </tbody>
            </table>
    </div>

</div>